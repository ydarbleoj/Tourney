<div class="row tournament-show">

  <div class="row expanded tourn-show-head-cont" id="show-header-<%= @tournament.year %>">

    <% if @role == 'admin' %>
      <%= link_to tournament_players_path(@tournament.id)  do %>
      <div class="column align-self-bottom" id="tourn-header">
        <h1>
          <%= @tournament.name %> <%= @tournament.year %>
          <%= image_tag('settings-10-24.png')  %>
        </h1>
      </div>
      <% end %>
    <% else %>
    <div class="column align-self-bottom" id="tourn-header">
      <h1>
        <%= @tournament.name %> <%= @tournament.year %>
      </h1>
    </div>
    <% end %>
  </div>

   <div class="row expanded" id="show-link-container">
    <div class="columns">
      <%= link_to(tournament_stroke_leaderboard_index_path(@tournament.id)) do %>
      <div class="row expanded align-middle show-link" id="home-links">
        <div class="small-8 columns home-button-left" id="button-left-side">
          <p>Stroke Leaderboard</p>
        </div>
        <div class="small-4 columns text-center home-button-right" id="button-right-side">
          <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
        </div>
      </div>
      <% end %>

      <%= link_to(tournament_putting_leaderboard_index_path(@tournament.id)) do %>
      <div class="row expanded align-middle show-link" id="home-links">
        <div class="small-8 columns">
          <p>Putting Leaderboard</p>
        </div>
        <div class="small-4 columns text-center home-button-right">
          <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
        </div>
      </div>
      <% end %>

      <%= link_to(tournaments_path) do %>
      <div class="row expanded align-middle show-link" id="home-links">
        <div class="small-8 columns">
          <p>Tee Times</p>
        </div>
        <div class="small-4 columns text-center home-button-right">
          <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
        </div>
      </div>
      <% end %>

      <%= link_to(tournament_new_courses_path(@current_tournament.id)) do %>
      <div class="row expanded align-middle show-link" id="home-links">
        <div class="small-8 columns">
           <p>Course Statistics</p>
        </div>
        <div class="small-4 columns text-center home-button-right">
          <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
        </div>
      </div>
      <% end %>

      <%= link_to(tournament_tournament_rounds_path(@tournament.id)) do %>
      <div class="row expanded align-middle show-link" id="home-links">
        <div class="small-8 columns">
          <p>Scorecards</p>
        </div>
        <div class="small-4 columns text-center home-button-right">
          <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
        </div>
      </div>
      <% end %>

    </div>

  </div>

</div>
