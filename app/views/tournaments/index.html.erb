<div class="row tournament-index">

  <div class="row expanded tourn-index-header" id="tourn-index-header">
    <div class="column align-self-bottom" id="tourn-header">
      <h1>Bandon</h1>
    </div>
  </div>

  <div class="row expanded" id="index-link-container">

    <%= link_to(tournament_path(@current_tournament), ) do %>
    <div class="row expanded align-middle show-link" id="home-links">
      <div class="small-8 columns home-button-left" id="button-left-side">
        <p>Current Tournament <%= @current_tournament.year %></p>
      </div>
      <div class="small-4 columns text-center home-button-right">
        <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
      </div>
    </div>
    <% end %>


    <%= link_to(history_tournaments_path) do %>
    <div class="row expanded align-middle show-link" id="home-links">
      <div class="small-8 columns">
        <p>History</p>
      </div>
      <div class="small-4 columns text-center home-button-right">
        <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
      </div>
    </div>
    <% end %>

    <%= link_to() do %>
    <div class="row expanded align-middle show-link" id="home-links">
      <div class="small-8 columns">
         <p>Statistics</p>
      </div>
      <div class="small-4 columns text-center home-button-right">
        <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
      </div>
    </div>
    <% end %>

    <%= link_to(tournament_new_courses_path(@current_tournament.id)) do %>
    <div class="row expanded align-middle show-link" id="home-links">
      <div class="small-8 columns">
        <p>Courses Listings</p>
      </div>
      <div class="small-4 columns text-center home-button-right">
        <%= image_tag("arrow-30-16.png", class: 'home-icon')%>
      </div>
    </div>
    <% end %>
   </div>
</div>
