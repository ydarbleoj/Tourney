<div class="row expanded us-new-container">
  <div class="columns">

    <div class="row new-header">
      <div class="columns">
        <h5 class="text-center"><%= current_user.username %></h5>
        <h5>Hole <%= @user_score.number %></h5>
      </div>
    </div>

    <div class="row expanded text-center align-middle form-header">
      <div class="small-6 columns">
        <h5>Score</h5>
        <h5><%= @user_score.score %> (<%= @user_score.net %>)</h5>
      </div>
      <div class="small-6 columns">
        <h5>Putts</h5>
        <h5><%= @user_score.putts %></h5>
      </div>
    </div>

    <div class="row expanded">
    </div>
  </div>
</div>