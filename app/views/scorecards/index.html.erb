<div class="row expanded user-scorecards">

  <div class="row align-bottom scorecard-index scroll-effect">
    <div class="small-12 text-left columns">
      <h5><%= current_user.username %></h5>
      <h5>Scorecards</h5>
    </div>
  </div>

  <div class="row scorecard-list">
    <div class="columns">
      <% @scorecards.each do |scorecard| %>

        <%= link_to(display_scorecard_path(scorecard.id)) do %>
        <div class="row align-middle scorecard-links scroll-trgt">

          <div class="small-3 columns text-center">
            <h2><%= scorecard.total_score %></h2>
          </div>

          <div class="small-9 columns">
            <div class="row sc-row">
              <div class="small-12 columns text-left">
                <p><%= scorecard.created_at.strftime('%a, %m/%d/%y')  %></p>
                <p><%= scorecard.new_course.name %></p>
              </div>
              <div class="small-12">

              </div>
            </div>
          </div>

        </div>
        <% end %>

      <% end %>
    </div>
  </div>


</div>