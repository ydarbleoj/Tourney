<div class="row expanded align-center accept-page">
  <div class="small-12 medium-8 large-6 columns align-self-middle">
    <p class="text-center">You have accepted an invitation to the <%= @invitation.tournament.name%> : <%= @invitation.tournament.year %>
    </p>
  </div>
  <div class="row expanded">
    <div class="columns">
    <% if !user_signed_in? %>
      <%= render "anonymous_accept" %>
    <% else %>
      <%= render "user_accept" %>
    <% end %>
    </div>
  </div>
</div>