<div class="row courses-container">
  <div class="row course-header">
    <%= content_tag :div, id: "#{@course.name.split(' ').join('-') + '-show'}" do %>
	  <div class="row back"><%= link_to '<----', :back  %></div>
    <h1><%= @course.name %></h1>
    <div class="row" id="course-stats">
	    <div class="row" id="course-stats-top">
	      <div class="small-6 medium-4 columns">
	        <h2> Yardage: <%= @course.yardage %></h2>
	      </div>
	      <div class="small-6 medium-4 columns">
	        <h2> Par: <%= @course.par %></h2>
	      </div>
	    </div>
	    <div class="row" id="course-stats-bottom">
	      <div class="small-6 medium-4 columns">
	        <h2> Slope: <%= @course.slope %></h2>
	      </div>
	      <div class="small-6 medium-4 columns">
	        <h2> Rating: <%= @course.rating.to_f %></h2>
	      </div>
	    </div>
    </div>
    <% end %>
  </div>
</div>