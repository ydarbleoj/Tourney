<div class="row courses-container">
  <% @courses.each do |f|  %>
  <div class="small-12 medium-4 columns courses-link">
    <%= content_tag :div, class: 'course-layer', id: "#{f.name.split(' ').join('-')}" do %>
      <%= content_tag :div, class: 'course-layer' do %>
       <h1><%= link_to f.name, course_path(f.id) %></h1>
      <% end %>
    <% end %>
  </div>
  <% end %>
</div>
