<div class="row" id="user-profile">
	<div class="row align-middle align-center" id="user-profile-top">
		<div class="small-6 medium-6 large-4 columns" id="user-profile-image">
			<div id="user-image">
				<div class="layer"></div>
			</div>
			<div id="user-home">
				<i class="fi-marker"></i>
				<span> <%= current_user.home%></span>
			</div>
		</div>
		<div class="columns" id="user-profile-info">
			<p id="profile-username"><%= current_user.username %></p>
			<p id="user-handicap">Handicap  <span><%= current_user.handicap %></span></p>
		</div>
	</div>
	<div class="row align-middle" id="user-profile-middle">
		<div class="row">
			<div class="columns" id="best-round">
				<p>Best Round</p>
				<h5><span><%= @low_net.score %></span> at <%= @course.name %></h5>
			</div>
		</div>
		<div class="row">
			<div class="columns" id="best-putting">
				<p>Fewest Putts</p>
				<h5><span><%= @low_putt.putts %></span> at <%= @putt_course.name %></h5>
			</div>
		</div>
		<div class="row">
			<div class="columns" id="next-round">
				<p>Next Round</p>
				<h5><span><%= @next_round.tee_time.strftime("%H:%M") %></span> at <%= @next_round.course.name %></h5>
			</div>
		</div>
	</div>
	<div class="row align-middle" id="profile_nav">
		<div class="small-4 columns tourn-links">
			<%= link_to "Tournaments", tournaments_path  %>
		</div>
		<div class="small-3 columns tourn-links">
			<%= link_to "+ Rnd", tournament_rounds_path(@tournament) %>
		</div>
		<div class="small-2 columns tourn-links">
			<%= link_to "Edit", edit_user_path(current_user.id)  %>
		</div>
		<div class="columns tourn-links">
			<%= link_to "Log Out", destroy_user_session_path, method: :delete %>
		</div>
	</div>
</div>