<div class="row" id="user-profile">
	<div class="row align-middle" id="user-profile-top">
		<div class="small-12 columns" id="user-profile-info">
			<p id="profile-username"><%= current_user.first_name %> <%= current_user.last_name %></p>
			<span> <%= current_user.home %></span>
			<p id="user-handicap">Handicap  <span><%= current_user.handicap %></span></p>
		</div>
	</div>
	<div class="row align-center" id="user-profile-middle">
		<div class="row align-middle">
			<div class="columns" id="best-round">
				<p>Best Round</p>
				<h5><span><%= @low_net.nil?.! ? @low_net.score - @low_net.handicap : 0 %></span> at <%=  @course.nil?.! ? @course.name : "" %></h5>
			</div>
		</div>
		<div class="row align-middle">
			<div class="columns" id="best-putting">
				<p>Fewest Putts</p>
				<h5><span><%= @low_putt.nil?.! ? @low_putt.putts : 0 %></span> at <%= @putt_course.nil?.! ? @putt_course.name : ''%></h5>
			</div>
		</div>
		<div class="row align-middle">
			<div class="columns" id="tourn-average">
				<p>Tournament Average</p>
				<h5><%= @avg_score %></h5>
			</div>
		</div>
	</div>
	<div class="row align-middle" id="profile_nav">
		<div class="small-4 columns tourn-links">
			<%= link_to "Tournaments", tournaments_path  %>
		</div>
		<div class="small-4 columns tourn-links">
			<%= link_to "Edit", edit_user_path(current_user.id)  %>
		</div>
		<div class="columns tourn-links">
			<%= link_to "Log Out", destroy_user_session_path, method: :delete %>
		</div>
	</div>
</div>