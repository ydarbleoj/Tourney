<div class="row expanded" id="user-profile">

	<div class="row align-middle user-header">
		<div class="small-12 medium-6 columns text-center">
      <h5><%= current_user.first_name %> <%= current_user.last_name %></h5>
      <p><%= current_user.home %></p>
      <p><%= current_user.handicap %> handicap</p>
    </div>
	</div>

  <div class="row user-links">
    <div class="columns">
      <%= link_to(user_statistic_path(current_user)) do %>
      <div class="row expanded align-middle link-row">
        <div class="small-4 medium-4 large-4 columns" id="user-statistics"></div>
        <div class="small-8 medium-8 large-8 columns text-center">
          <h5>Statistics</h5>
        </div>
      </div>
      <% end %>

      <%= link_to(scorecards_path) do %>
      <div class="row expanded align-middle link-row">
        <div class="small-4 medium-4 large-4 columns" id="user-scorecards"></div>
        <div class="small-8 medium-8 large-8 columns text-center">
          <h5>Scorecards</h5>
        </div>
      </div>
      <% end %>

       <%= link_to(tournaments_path) do %>
      <div class="row expanded align-middle link-row">
        <div class="small-4 medium-4 large-4 columns" id="user-flag"></div>
        <div class="small-8 medium-8 large-8 columns text-center">
          <h5>Tournaments</h5>
        </div>
      </div>
      <% end %>

      <%= link_to(edit_user_path(current_user)) do %>
      <div class="row expanded align-middle link-row">
        <div class="small-4 medium-4 large-4 columns" id="user-settings"></div>
        <div class="small-8 medium-8 large-8 columns text-center">
          <h5>Settings</h5>
        </div>
      </div>
      <% end %>

      <%= link_to(new_tournament_path) do %>
      <div class="row expanded align-middle link-row">
        <div class="small-4 medium-4 large-4 columns" id="user-statistics"></div>
        <div class="small-8 medium-8 large-8 columns text-center">
          <h5>New Tournament</h5>
        </div>
      </div>
      <% end %>

    </div>

  </div>
</div>