<div class="row login-page">
  <div class="small-10 medium-12 large-3 columns log-in-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field field-info">
      <i class="fi-at-sign"></i>
      <%= f.email_field :email, autofocus: true, placeholder: 'EMAIL', class: 'email-login' %>
    </div>
    <div class="field field-info" id="login-form-line">
      <i class="fi-star"></i>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'PASSWORD' %>
        <%= button_tag(class: "login-submit") do %>
          <i class="fi-arrow-right"></i>
        <% end %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>