<div class="row expanded user-statistic-show">
  <div class="columns">

    <div class="row show-header align-bottom scroll-effect">
      <div class="columns text-left">
        <h3>Statistics</h3>
        <p><%= @sc.length %> Rounds Played</p>
      </div>
    </div>

    <div class="row show-stats scroll-trgt">
      <div class="columns">

        <div class="row expanded align-middle stat-box">
          <div class="columns">
            <div class="row expanded">
              <div class="small-12 columns">
                <h5 class='stat-title'>Scoring Avg</h5>
              </div>
            </div>

            <div class="row expanded text-center scoring-avg">
              <div class="small-6 columns">
                <h3><%= @net_scoring_avg.nil? ? 0 : @net_scoring_avg.round(1) %></h3> <p>net</p>
              </div>
              <div class="small-6 columns">
                <h3><%= @gross_scoring_avg.nil? ? 0 : @gross_scoring_avg.round(1) %></h3> <p>gross</p>
              </div>
            </div>

          </div>
        </div>

        <div class="row align-middle stat-box">
          <div class="small-9 columns text-left">
            <h5 class='stat-title'>Lowest Round</h5>
            <h5><%= @lowest_round.nil? ? 0 : @lowest_round.name %></h5>
            <p class="round-date"><%= @round_date.nil? ? '' : @round_date.strftime("%m/%d/%y") %></p>
          </div>
          <div class="small-3 columns text-center">
            <h2><%= @lowest_round.nil? ? 0 : @lowest_round.total_net %></h2>
            <p>NET</p>
          </div>
        </div>

        <div class="row expanded align-middle stat-box">
          <div class="columns">
            <div class="row expanded">
              <div class="small-12 columns">
                <h5 class='stat-title'>Putting Avg</h5>
              </div>
            </div>

            <div class="row expanded text-center scoring-avg">
              <div class="small-6 columns">
                <h3><%= @putting_avg.nil? ? 0 : @putting_avg.round(1) %></h3> <p>p</p>
              </div>
              <div class="small-6 columns">
                <h3><%= @three_putt_avg.nil? ? 0 : @three_putt_avg.round(1) %></h3> <p>3p</p>
              </div>
            </div>

          </div>
        </div>

        <div class="row align-middle stat-box">
          <div class="small-9 columns text-left">
            <h5 class='stat-title'>Fewest Putts</h5>
            <h5><%= @fewest_putts.nil? ? 0 : @fewest_putts.name %></h5>
            <p class="round-date"><%= @putt_date.nil? ? '' : @putt_date.strftime("%m/%d/%y")  %></p>
          </div>
          <div class="small-3 columns text-center">
            <h2><%= @fewest_putts.nil? ? 0 : @fewest_putts.total_putts %></h2>
          </div>
        </div>



        <div class="row align-middle stat-box">
          <div class="columns">
            <div class="row expanded">
              <div class="small-12 columns">
                <h5 class='stat-title'>Par Avgs</h5>
              </div>
            </div>
            <div class="row text-center expanded">
              <div class="small-4 columns">
                <h5>Par 3</h5>
                <h5><%= @par3_avg ||= 0 %></h5>
              </div>
              <div class="small-4 columns">
                <h5>Par 4</h5>
                <h5><%= @par4_avg ||= 0 %></h5>
              </div>
              <div class="small-4 columns">
                <h5>Par 5</h5>
                <h5><%= @par5_avg ||= 0 %></h5>
              </div>
            </div>
          </div>

        </div>



      </div>
    </div>

  </div>
</div>